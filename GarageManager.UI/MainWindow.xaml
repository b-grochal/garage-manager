<Window x:Class="GarageManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:GarageManager.UI.Converters"
        xmlns:local="clr-namespace:GarageManager.UI"
        xmlns:nav="clr-namespace:GarageManager.UI.State.Navigator"
        xmlns:vm="clr-namespace:GarageManager.UI.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="600" MinWidth="1080" WindowStartupLocation="CenterScreen" WindowState="Maximized" FontFamily="Arial">
    <Window.Resources>
        <converters:EqualValueToParameterConverter x:Key="EqualValueToParameterConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Width="250">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoggedIn}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <StackPanel Background="{StaticResource PrimaryBlackBrush}" Visibility="Visible">
                <Grid Height="150">
                    <TextBlock Foreground="{StaticResource PrimarySilverBrush}" FontSize="24" Text="Garage Manager" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                </Grid>
                <StackPanel>
                    <RadioButton Content="Home" 
                                 Command="{Binding ShowHomePageCommand}"
                                 IsChecked="{Binding CurrentViewModel, Mode=OneWay, Converter={StaticResource EqualValueToParameterConverter}, ConverterParameter={x:Type vm:HomeViewModel}}"/>
                    <RadioButton Content="Users" 
                                 Command="{Binding ShowUsersListCommand}"
                                 IsChecked="{Binding CurrentViewModel, Mode=OneWay, Converter={StaticResource EqualValueToParameterConverter}, ConverterParameter={x:Type vm:UsersListViewModel}}"/>
                    <RadioButton Content="Customers" 
                                 Command="{Binding ShowCustomersListCommand}"
                                 IsChecked="{Binding CurrentViewModel, Mode=OneWay, Converter={StaticResource EqualValueToParameterConverter}, ConverterParameter={x:Type vm:CustomersListViewModel}}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <ScrollViewer Grid.Column="1">
            <ContentControl Content="{Binding CurrentViewModel}"/>
        </ScrollViewer>


    </Grid>
</Window>
